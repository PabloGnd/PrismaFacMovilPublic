@model List<Cliente>
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor objAccesor;
<div class="loader-mask">
    <div class="loader">
        <div></div>
        <div></div>
    </div>
</div>

@if (objAccesor.HttpContext.Session.GetInt32("CodigoExistente") == 2)
{
    <div class="modal" tabindex="-1" id="cliente-existenteModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                </div>

                <div class="modal-body">
                    <div class="row">
                        <svg class="bi flex-shrink-0 me-2 text-warning" width="50" height="50" role="img" aria-label="warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    </div>
                    <div class=" row alert  justify-content-center" role="alert">
                        <div class="col-auto">
                            <h5>
                                @objAccesor.HttpContext.Session.GetString("MensajeExistente")
                            </h5>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" style="background-color:#0CC084" data-bs-dismiss="modal">Cerrar</button>

                </div>
            </div>
        </div>
    </div>
}

<!-- Preloader End -->
<!-- Header Section Start -->
<header id="top-navbar" class="top-navbar">
    <div class="container">
        <div class="top-navbar_full">

            <div class="brookwood-txt d-flex align-items-center">
                <p class="brookwood-txt">Clientes</p>
            </div>
            <div>
                <ul class="homepage-cart-sec">
                    <li><a asp-controller="Cliente" asp-action="Nuevo"><i class="fa-solid fa-plus"></i></a></li>
                    <li class="pf-16"><a data-bs-toggle="modal" data-bs-target="#offcanvas1" id="BuscarCliente"><img src="/images/homepage/search-icon.svg" alt="search-icon"></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="navbar-boder"></div>
</header>

<section id="partner-page">
    <div class="container">
        <div id="DetalleCliente"></div>
        <div class="partner-page-full mt-24" id="Cliente">
            @foreach (var item in Model)
            {

                <div class="partner-page-details  mt-16">
                    <div class="partner-page-desciption">
                        <div class="partner-page-img-sec bg-blck">
                            <h3 class="round-txt-part-page">@item.InicialApellido@item.InicialNombre</h3>
                        </div>
                        <div class="partner-page-content">
                            <div class="partner-page-content-full">
                                <h4 class="offcial-title-part-page">@item.Nombre1 @item.Apellido1</h4>
                                <div class="row">
                                    <div class="col-10">
                                        <h5 class="offcial-subtitle-part-page">@item.Identificacion</h5>
                                    </div>
                                    <div class="col-1">
                                        <a class="nav-link px-0 align-middle" style="color:#ffc107" asp-action="ObtenerCliente" asp-controller="Cliente" asp-route-IdCliente="@item.IdCliente"><i class="fa-solid fa-pen"></i></a>
                                    </div>
                                </div>                               
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            }
            <div></div>
                <br/>
        </div>
    </div>
</section>


    <div class="offcanvas offcanvas-bottom addtohome-popup theme-offcanvas" tabindex="-1" id="offcanvas" aria-modal="true" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false">
        <button type="button" class="btn-close text-reset popup-close-home" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        <div class="offcanvas-body small">
            <div class="partner-page-content-full text-center">
                <h4 class="offcial-title-part-page">Buscar por:</h4>

            </div>
            <div class="select-lang-sec mt-32">
                <div class="lang-sec">
                    <input type="radio" id="select-lang1" name="select-language" class="Identificacion" checked>
                    <label class="custom-radio-sel-lang" for="select-lang1">Cedula</label>
                </div>
                <div class="lang-sec">
                    <input type="radio" id="select-lang2" name="select-language">
                    <label class="custom-radio-sel-lang " for="select-lang2">Nombres</label>
                </div>
                <div class="lang-sec">
                    <input type="radio" id="select-lang3" name="select-language">
                    <label class="custom-radio-sel-lang " for="select-lang3">Apellidos</label>
                </div>

            </div>
            <div id="PresentarInput">
                <div class="form-sec mt-16" id="IdentificacionInput">
                    <input type="text" class="form-control" placeholder="Identificacion" aria-label="inputBuscar" name="inputBuscar" id="inputBuscarIdentificacion" aria-describedby="inputGroupPrepend">
                    <div class="form_bottom_boder"></div>
                </div>
            </div>
            <div class="form-sec mt-16">
                <button class="btn-emisor btn" id="btnBuscar">Buscar</button>
            </div>

        </div>
    </div>


