        <!-- Header Section Start -->
        <header id="top-navbar" class="top-navbar">
            <div class="container">
                <div class="top-navbar_full">
                    <div class="back-btn">
                        <a asp-controller="Registro" asp-action="Ingreso" class="nav-link btn-prev">
                            <img src="/images/forget-password-screen/back-btn.svg" alt="back-btn-img">
                        </a>
                    </div>
                    <div class="top-navbar-title d-flex align-items-center">
                        <p>Recargas</p>
                    </div>
                </div>
            </div>
            <div class="navbar-boder"></div>
        </header>
        <!-- Header Section End -->
        <!-- Checkout page Section Start -->
        <section id="checkout-page">
            <div class="checkout-page-increment-sec-full mt-24">
                <div class="container">
                    <div class="row">
                        <p style=" font-weight: bold; font-size: 40px; color:#ffc107; display: flex; justify-content: center; align-items: center; ">Rápido y Seguro!</p>
                    </div>
                    <div class="row">
                        <center style=" font-size: 15px; color:#339A76; display: flex; justify-content: center; align-items: center;">Estamos trabajando en nuevos métodos de pago para brindarte la mejor experiencia</center>
                    </div>
                    <div class="row divRecarga">
                        <a id="PopupRecarga" style="display: flex; justify-content: center; align-items: center; color:darkgray">Cómo recargar?</a>
                    </div>
                    <div class="faq-bottom-border"></div>

                    <div class="check-page-top-content mt-16">
                        <div class="accordion-item border-0 mt-24">
                            <h2 class="accordion-header">
                                <button class="accordion-button custom_icon collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordian">
                                    <span>Banco Pichincha</span>
                                </button>
                            </h2>
                            <div id="accordian" class="accordion-collapse collapse">
                                <div class="accordion-body faq-answer">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col">
                                                <p>Nombre Titular</p>
                                            </div>
                                            <div class="col">
                                                <p>Betsy Calderon</p>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col">
                                                <p>Numero de cedula</p>
                                            </div>
                                            <div class="col">
                                                <p>1003654789</p>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col">
                                                <p>Tipo de cuenta</p>
                                            </div>
                                            <div class="col">
                                                <p>Ahorros</p>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col">
                                                <p>Numero de cuenta</p>
                                            </div>
                                            <div class="col">
                                                <p>22365478</p>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                        <div class="checkoutpage-boder mt-16"></div>
                    </div>

                    <div class="check-page-top-content mt-16">
                        <div class="accordion-item border-0 mt-24">
                            <h2 class="accordion-header">
                                <button class="accordion-button custom_icon collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordian2">
                                    <span>Produbanco</span>
                                </button>
                            </h2>
                            <div id="accordian2" class="accordion-collapse collapse">
                                <div class="accordion-body faq-answer">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col">
                                                <p>Nombre Titular</p>
                                            </div>
                                            <div class="col">
                                                <p>Betsy Calderon</p>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="row">
