                        <div class="checkoutpage-boder mt-16"></div>
                    </div>
                </div>
            </div>


            <form class="sign-in-form mt-32" id="FrmNuevaRecarga" asp-action="GuardarCambios" asp-controller="Cliente" method="post" enctype="multipart/form-data">
                <div class="checkoutpage-fifth-sec mt-24">
                    <div class="container">
                        <div class="checkoutpage-price-sec">
                            <div class="checkoutpage-price-sec-full">
                                <div class="form-sec">
                                    <label class="txt-lbl">Valor</label><br>
                                    <input type="number" id="Valor" class="txt-input Valor" name="Valor">
                                    <div id="validacionValor" class="invalid-feedback has-validation">
                                        Campo vacio
                                    </div>
                                    <div class="form_bottom_boder"></div>
                                </div>
                                <div class="form-sec mt-16">
                                    <label class="txt-lbl">Número comprobante</label><br>
                                    <input type="number" id="NumeroComprobante" class="txt-input NumeroComprobante" name="NumeroComprobante">
                                    <div id="validacionNumeroComprobante" class="invalid-feedback has-validation">
                                        Campo Vacio
                                    </div>
                                    <div class="form_bottom_boder"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="buy-now-btn mt-24">
                    <a id="NuevaRecarga" class="checkout-1">Recargar</a>
                    <a id="NuevaRecarga" class="checkout-2">Recargar</a>
