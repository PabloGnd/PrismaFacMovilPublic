@model FacturaViewcs
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor objAccesor
@{
    ViewData["Title"] = "Nuevo Producto";
    Layout = null;
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BrookWood</title>
    <link rel="icon" href="assets/images/favicon/icon.png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&amp;display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&amp;display=swap"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/41bcea2ae3.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/slick.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/media-query.css">
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
        </symbol>
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </symbol>
    </svg>
</head>
<body>
    <div class="site_content">
        <!-- Preloader Start -->
        <div class="loader-mask">
            <div class="loader">
                <div></div>
                <div></div>
            </div>
        </div>
        <!-- Preloader End -->
        <!-- Header Section Start -->
        <header id="top-navbar" class="top-navbar">
            <div class="container">
                <div class="top-navbar_full">
                    <div class="back-btn">
                        <a asp-controller="Factura" asp-action="ListaProducto" class="nav-link btn-prev">
                            <img src="/images/forget-password-screen/back-btn.svg" alt="back-btn-img">
                        </a>
                    </div>
                    <div class="top-navbar-title d-flex align-items-center">
                        <p>Resumen</p>
                    </div>
                </div>
            </div>
            <div class="navbar-boder"></div>
        </header>
        <!-- Header Section End -->
        <!-- Checkout page Section Start -->
        <section id="checkout-page">
            <div class="checkout-page-increment-sec-full mt-24">
                <div class="container">
                    <input type="hidden" value="@objAccesor.HttpContext.Session.GetString("varAplicaIva")" id="AplicaIva" />
                    @foreach (var item in Model.lstFactura)
                    {
                        <input type="hidden" value="@item.Total" id="SubTotal" />
                        <input type="hidden" value="@item.TotalDescuento" id="TotalDescuento" />
                    }
                <center>
                        <div class="partner-page-img-sec bg-blck">
                            <h3 class="round-txt-part-page">@Model.dtoCliente.InicialApellido@Model.dtoCliente.InicialNombre</h3>
                        </div>
                        <br/>
                        <div class="partner-page-content">
                            <div class="partner-page-content-full">
                                <h4 class="offcial-title-part-page">@Model.dtoCliente.Apellido1 @Model.dtoCliente.Nombre1</h4>
                                <h5 class="offcial-subtitle-part-page">@Model.dtoCliente.Identificacion</h5>
                            </div>
                        </div>
                </center>                   
                    
                    <div class="faq-bottom-border"></div>

                    <div class="check-page-top-content mt-16">
                        <div class="accordion-item border-0 mt-24">
                            <h2 class="accordion-header">
                                <button class="accordion-button custom_icon collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordian2">
                                    <span>Productos</span>
                                </button>
                            </h2>
                            <div id="accordian2" class="accordion-collapse collapse">
                                <div class="accordion-body faq-answer">
                                    @foreach (var item in Model.lstProductoFactura)
                                    {
                                        <div class="partner-page-desciption">
                                            <div class="partner-page-img-sec bg-green">
                                                <img class="imagen-pequena" src="/images/IconoProductos.jpeg" alt="">
                                            </div>
                                            <div class="partner-page-content">
                                                <div class="partner-page-content-full">
                                                    <h4 class="offcial-title-part-page">@item.Descripcion</h4>
                                                    <div class="row">
                                                        <div class="col-10"><h5 class="offcial-subtitle-part-page">Precio: @item.PrecioUnitario$</h5></div>
                                                        
                                                    </div>


                                                    <h5 class="offcial-subtitle-part-page">Descuento: @item.PorcentajeDescuento%</h5>
                                                </div>
                                            </div>

                                            <div class="product-page-favourite single-page-favo ">
                                                <a href="javascript:void(0);" class="item-bookmark ">
                                                    <h6>@item.Stok</h6>
                                                </a>
                                            </div>

                                        </div>
                                    }

                                </div>
                            </div>
                            
                        </div>
                        <div class="checkoutpage-boder mt-16"></div>
                    </div>
                </div>
            </div>


            @foreach (var item in Model.lstFactura)
            {
                <div class="checkoutpage-fifth-sec mt-24">
                    <div class="container">
                        <div class="checkoutpage-price-sec">
                            <div class="checkoutpage-price-sec-full">
                                <div class="check-page-top">
                                    <h4 class="check-price-txt1">Factura</h4>
                                    <div class="checkoutpage-boder mt-8"></div>
                                </div>
                                <div class="check-page-bottom mt-12">
                                    <div class="check-page-bottom-deatails mt-12">
                                        <div class="check-price-name">
                                            <p>SubTotal</p>
                                        </div>
                                        <div>
                                            <p class="col-green" >$@item.Subtotal</p>
                                        </div>
                                    </div>
                                    <div class="check-page-bottom-deatails mt-12">
                                        <div class="check-price-name">
                                            <p>Descuento</p>
                                        </div>
                                        <div>
                                            <p class="col-green" >$@item.TotalDescuento</p>
                                        </div>
                                    </div>
                                    <div class="check-page-bottom-deatails mt-12">
                                        <div class="check-price-name">
                                            <p>Impuestos</p>
                                        </div>
                                        <div id="Iva">
                                            
                                        </div>
                                    </div>
                                    <div class="checkoutpage-boder mt-12"></div>
                                    <div class="check-page-bottom-deatails mt-12">
                                        <div>
                                            <p class="col-black">Total</p>
                                        </div>
                                        <div id="Total">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }

            <div class="buy-now-btn mt-24">
                <a asp-controller="Factura" asp-action="GenerarFactura" class="checkout-1">Facturar</a>
                <a asp-controller="Factura" asp-action="GenerarFactura" class="checkout-2">Facturar</a>
            </div>
        </section>
        <!-- Checkout page Section End -->
    </div>
    <script src="~/js/jquery-min-3.6.0.js"></script>
    <script src="~/js/slick.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/Resumen.js"></script>
    
</body>
</html>